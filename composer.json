{
    "name": "mount-carmel/school-website",
    "description": "Mount Carmel School Website",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-mysqli": "*",
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9",
        "firebase/php-jwt": "^6.11"
    },
    "require-dev": {
        "ext-gd": "*",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "modules/",
            "Config\\": "config/"
        },
        "files": [
            "config/paths.php",
            "config/config.php"
        ]
    },
    "scripts": {
        "post-autoload-dump": [
            "rm -rf vendor/composer/installed.json",
            "find vendor -name .git -type d -exec rm -rf {} +"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}